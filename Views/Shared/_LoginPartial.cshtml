@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav__items">
            <a class="nav__links" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Perfil</a>
        </li>
        <li class="nav__items">
            <form asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="btn__logout" type="submit">Cerrar Sesión</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav__items">
            <a class="nav__links" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
        <li class="nav__items">
            <a class="nav__links" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
        </li>
    }

