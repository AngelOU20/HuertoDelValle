    <header>
        <nav class="navbar">
            <div class="brand-title" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo1.jpg" width="90px" height="90px" alt="" style="border: 5px solid #FFBB98">
            </div>
        <a href="#" class="toggle-button">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </a>
        <div class="navbar-links">
          <ul>
            <li><a asp-area="" asp-controller="Catalogo" asp-action="Catalogo">CATALOGO</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Nosotros">Nosotros</a></li>
            @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a  class="bar" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li>
                <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li>
                <a class="bar" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li>
                <a class="bar" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
          </ul>
        </div>
      </nav>
    </header>

    <br>
    <div class="contenido">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <br>

    <footer class="main-footer">
        <div class="container con__footer">
            <div class="footer__section">
                <div class="container__logo">
                    <img src="~/img/logo.png" alt="" class="footer__logo">
                </div>
            </div>
            <div class="footer__section">
                
            </div>
            <div class="footer__section">
                <h2 class="footer__title">Contacto</h2>
                <div class="footer__contac">
                    <i class="contac__icon fas fa-map-marker-alt"></i>
                    <p class="footer__txt">Lima Perú.</p>
                </div>
                <div class="footer__contac">
                    <i class="contac__icon fas fa-phone"></i>
                    <p class="footer__txt">+51 922 708 667</p>
                </div>
                <div class="footer__contac">
                    <i class="contac__icon fas fa-envelope"></i>
                    <p class="footer__txt">familia@elhuertodelvalle.com</p>
                </div>
            </div>
            <div class="footer__section">
                <h2 class="footer__title">Redes Sociales</h2>
                <div>
                    <i class="footer__iconsocial fab fa-facebook"></i>
                    <i class="footer__iconsocial fab fa-instagram"></i>
                </div>
            </div>
        </div>
        <section class="footer__copy container">
            <h3 class="footer__copyright">  Derechos reservados &copy; El Huerto del Valle</h3>
        </section>
    </footer>

    <script src="~/js/menu.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


