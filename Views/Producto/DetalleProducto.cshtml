@model Producto

@{
    ViewData["Title"] = "Detalle";
}

<div class="container-fondo">
    <div class="fondo">
        <div class="fondo__section">
            <img src="~/img/fondo.jpg" alt="" class="fondo__img">
            <div class="fondo__content">
                <h2 class="fondo__title">LLEVAMOS DEL HUERTO A TU MESA</h2>
                <p class="fondo__txt">
                    El Huerto del Valle
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <br>
    <section class="block">
            <div class="block__container contenedor">

                <div class="block__texts">
                    <h2 class="block__subtitle">@Html.DisplayFor(model => model.NombreProducto)</h2>
          
                    <p class="block__paragraph">
                        Precio: S/.@Html.DisplayFor(model => model.PrecioProducto)
                    </p>
                    <p class="block__paragraph">
                        Stock : @Html.DisplayFor(model => model.Stock)
                    </p>
                    <p class="block__paragraph">
                        Descripci√≥n: <br/>@Html.DisplayFor(model => model.DescripcionProducto)
                    </p>
                </div>

                <figure class="block__picture">
                     <img src="@Html.DisplayFor(model => model.ImagenProducto)" class="block__img" alt="">
                </figure>
            </div>
        </section>
</div>

<br>

<style>

.contenedor{
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    padding: var(--padding-container);
}


.container-fondo{
    width: 90%;
    max-width: 1500px;
    margin: auto;
    position: relative;
    overflow: hidden;
}

.fondo{
    width: 100%;
    height: 100%;
    position: relative;
    z-index: -1;
}

.fondo__section{
    width: 100%;
    position: relative;
}

.fondo__img{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.fondo__content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
    z-index: 999;
}

.fondo__title{
    font-size: 52px;
    font-family: "Poppins", Arial, Helvetica, sans-serif;
}

.fondo__txt{
    margin: 5px 0;
    font-size: 20px;
    font-family: "Monaco", monospace;
}


/* block */

.block {
    background-color: #EDC19A;
    background-size: 20px 20px;
    background-position: 0 0, 10px 10px;
    box-shadow: 0 0 0 2px #e5e5f7,
                0 10px 10px;
    overflow: hidden;
}

.block__subtitle{
    color: #e5e5f7;
    font-size: 32px;
    margin-bottom: 35px;
    font-weight: bold;
}

.block__container{
    display: grid;
    grid-template-columns: 1fr  1fr;
    gap: 1em;
    align-items: center;
}

.block__picture{
    max-width: 550px;
    padding: 20px 10px 10px 100px;
}

.block__paragraph{
    line-height: 1.2;
    margin-bottom: 10px;
    text-align: justify;
    font-size: 20px;
    color: #e5e5f7;
}

.block__img{
    width: 100%;
    height: 400px;
    display: block;
}

@@media (max-width:800px){

.block__container{
    grid-template-columns: 1fr;
    grid-template-rows: max-content 1fr;
    text-align: center;
    }

.block__picture{
    max-width: 500px;
    grid-row: 1/2;
    justify-self: center;
    padding: 20px 0 0 0;
}

.block__img{
    width: 100%;
    height: 250px;
    display: block;
}

.block__subtitle{
    color: #e5e5f7;
    font-size: 25px;
    margin-bottom: 30px;
    font-weight: bold;
}

.block__paragraph{
    line-height: 1.2;
    margin-bottom: 10px;
    text-align: justify;
    font-size: 15px;
    color: #e5e5f7;
}

}

@@media only screen and (max-width:1500px) and (min-width: 900px){


.block__container{
    grid-template-columns: 1fr;
    grid-template-rows: max-content 1fr;
    text-align: center;
    }

.block__picture{
    max-width: 500px;
    grid-row: 1/2;
    justify-self: center;
    padding: 20px 0 0 0;
}

.block__img{
    width: 100%;
    height: 400px;
    display: block;
}

.block__subtitle{
    color: #e5e5f7;
    font-size: 35px;
    margin-bottom: 30px;
    font-weight: bold;
}

.block__paragraph{
    line-height: 1.5;
    margin-bottom: 15px;
    font-size: 25px;
    text-align: justify;
    color: #e5e5f7;
}

}
</style>