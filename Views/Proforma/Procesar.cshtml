@using HuertoDelValle.Models
@model Proforma

@{
    ViewData["Title"] = "Procesar Compra";
}
    <script>
                    function habilitar(e) {
                // los deshabilitamos todos
                var inputs=document.querySelectorAll("input[type=text]");
                for(var i=0;i<inputs.length;i++)
                {
                    inputs[i].disabled=true;
                }
            
                // habilitamos el seleccionado
                document.getElementsByName(e.id)[0].disabled=false;
            }
        </script>
<br>
<div class="container">
    <h1>Confirmar Compra</h1>
    <hr>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Orden" method="POST">
                
                <input type="radio" name="entrega" value="1" onclick="habilitar(this)" checked>Delivery  
                <input type="radio" name="entrega" value="2" onclick="habilitar(this)">Entrega en Tienda
                <div class="form-group">
                    <br/>
                    <label class="control-label">Direccion</label>
                    <input type=text name="direccion" class="form-control"/>
                    <span  class="text-danger"></span>
                </div>

                <div class="total__shipping">
                    <div class=""> <strong> Total </strong> </div>
                    <div class="">S/ </div>
                    <br/>
                </div>
                <div class="form-group">
                    <a asp-action="PagarPedido" class="btn btn-danger">Pagar Pedido</a>
                    <a asp-action="Proforma"  class="btn btn-danger">Regresar al Carrito</a>
                    <br/>
                </div>
            </form>       
        </div>
    </div>
</div>