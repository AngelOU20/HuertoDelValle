@model dynamic


<div class="container">
    <div class="">
        <h2>Catalogo</h2>
        <hr>
        <div>
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="col-md-3 col-xs-4">
                        <div class="dropdown">
                            <form asp-controller="Catalogo" asp-action="Catalogo">
                            <select class="custom-select btn btn-outline-light" type="button"  name="FiltrarCategoria" onchange="this.form.submit()">
                                <option asp-controller="Catalogo" asp-action="Catalogo" >Categorias</option>
                                @foreach (Categoria item in Model.Categoria)
                                {
                                    <option class="dropdown-item" value="@item.Id">@item.NombreCategoria</option>
                                }
                            </select>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-5 col-xs-8">
                        <form class="d-flex" method="POST">
                            <input type="text" name="search" placeholder="Search.." required>
                        </form>
                    </div>
                </div>
            </nav> 
        </div>
        <br>
    </div>

    <div class="text-center">
        <div class="row catalogue-container" data-aos="fade-up">
            @foreach (Producto producto in Model.Producto)
            {
                <div class="col-lg-3 catalogue-item filter-app">
                    <div class="card h-100">
                            <a asp-action="Producto" asp-route-id="@producto.Id"><img src="@Html.DisplayFor(modelItem => producto.ImagenProducto)" class="d-block w-100"></a>
                            
                            <div class="card-body">
                                <hr>
                                <h5 class="card-title">
                                    @Html.DisplayFor(modelItem => producto.NombreProducto)
                                </h5>
                                <strong>S/. @Html.DisplayFor(modelItem => producto.PrecioProducto)</strong>
                            </div>
                            <div class="card-footer" >
                                <form asp-action="" method="POST">
                                    <input type="hidden" name="id" value="@producto.Id">
                                    <button  asp-action ="Add" class="btn btn-outline-success">Agregar</button>
                                </form>
                            </div>
                    </div>
                </div>
            }  
        </div>
    </div>
</div>
<br>

<style> 
    input[type=text] {
        width: 130px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-image: url('searchicon.png');
        background-position: 10px 10px; 
        background-repeat: no-repeat;
        padding: 12px 20px 12px 40px;
        transition: width 0.4s ease-in-out;
    }

    input[type=text]:focus {
        width: 100%;
    }
</style>