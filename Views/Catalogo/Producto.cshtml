@model Producto
@{
    ViewData["Title"] = "Descripción del Producto";
}


<div class="cuerpo container">
    <div class="conte">
        <div class="title__conte"><h2>Producto</h2></div>
        <div class="">
            <div class="modal__featured">
                <a asp-controller="Catalogo" asp-action="Catalogo" >
                    <button type="button" class="button--transparent button--close">
                    <svg class="nc-icon glyph" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32">
                        <g><path fill="#ffffff" d="M1.293,15.293L11,5.586L12.414,7l-8,8H31v2H4.414l8,8L11,26.414l-9.707-9.707 C0.902,16.316,0.902,15.684,1.293,15.293z"></path> </g></svg>
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            
            <div class="col-md-6">
                <div class="contenedor-galeria">
                    <img src="@Html.DisplayFor(model => model.ImagenProducto)" class="img__card" alt="">
                </div>
                <div class="imagen-light">
                    <img src="~/img/close.svg" alt="" class="close">
                    <img src="" alt="" class="agregar-imagen">
                </div>
            </div>

            <div class="col-md-6">
                <div class="card-body">
                    <h5 class="card-title"> <strong>@Html.DisplayFor(model => model.NombreProducto)</strong></h5>
                    <br>
                    <p class="card-text">@Html.DisplayFor(model => model.DescripcionProducto)</p>
                    <p class="card-text"><strong> S/ @Html.DisplayFor(model => model.PrecioProducto) </strong> </p>

                    <form asp-action="" method="POST">
                        <div class="container__agregar">
                            <div class="">
                                <input  class="cantidad" type="number" name="cantidad" min="1" max="5" value="1"/>
                            </div>

                            <div class="">
                                <input type="hidden" name="id" value="@Html.DisplayFor(model => model.Id)">
                                <button asp-action="Agregar" class="btn__agregar">Añadir al carrito</button>
                            </div>
                        </div>
                    </form>
                    <hr>
                    <p class="card-text"> Categoría: @Html.DisplayFor(model => model.Categoria.NombreCategoria) </p>
                </div>
            </div>
        </div>
    </div>
    <hr>
</div>

<script src="~/js/lightbox.js"></script>

<style>
    body{
        background: #fff;
    }

    .container__agregar{
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 20px;
    }

    .btn__agregar{
        color: #0099CC;
        background: transparent;
        border: 2px solid #0099CC;
        border-radius: 6px;
        padding: 10px;
    }

    .btn__agregar:hover {
        background-color: #008CBA;
        color: white;
    }

    .cuerpo{
        overflow: hidden;
    }

    .contenedor-galeria{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        margin-top: 30px;
        z-index: 99999;
    }

    .img__card{
        width: 70%;
        display: block;
        margin-bottom: 15px;
        cursor: pointer;
        z-index: 99999;
    }

    .imagen-light{
        position: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, 0.534);
        transform: translate(100%);
        transition: transform .0s ease-in-out;
        z-index: 99999;
    }

    .agregar-imagen{
        width: 40%;
        transform: scale(0);
        border-radius: 10px;
        transition: transform .1s .1s;
        z-index: 99999;
    }

    .showImage{
        transform: scale(1);
        z-index: 99999;
    }

    .show{
        transform: translate(0);
        z-index: 99999;
    }

    .close{
        position: relative;
        bottom: 390px;
        right: 0px;
        width: 40px;
        cursor: pointer;
        z-index: 99999;
    }

    /**/

    .cantidad{
        padding: 5px 0;
        width: 50%;
        background: transparent;
        border: 2px solid #0099CC;
        text-align: center;
        font-size: 25px;
    }

    .conte{
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
        padding: 30px 0;
        border-bottom: 1px solid #ccc;
    }

    .title__conte{
        padding: 10px 0 0 10px ;
    }
    
    /**/

    .button--transparent {
        background: transparent;
        border: 0;
        outline: 0; 
    }

    .button--close {
        position: absolute;
        top: 10px;
        left: 10px;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
            align-items: center;
        -ms-flex-pack: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        color: #000;
        border-radius: 50%;
        transition: all .25s;
        z-index: 10; 
    }

    .button--close svg {
        width: 20px;
        height: 20px; 
    }

    .button--close svg * {
        fill: currentColor; 
    }

    .button--close:hover, .button--close:active, .button--close:focus {
        color: #000;
        background-color: #ffffff;
        box-shadow: 3px 3px 20px rgba(0, 0, 0, 0.1); 
    }

    .modal__featured {
        position: relative;
        -ms-flex: 1;
            flex: 1;
        min-width: 230px;
        padding: 20px;
        overflow: hidden;
        left: 70%;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px; 
    }

    @@media (max-width: 800px){

        .cantidad{
            padding: 20px 0;
        }

        .btn__agregar{
            color: #0099CC;
            background: transparent;
            border: 2px solid #0099CC;
            border-radius: 6px;margin top: 5px;
            padding: 13px;
            font-size: 12px;
        }

        .agregar-imagen{
            width: 80%;
            z-index: 99999;
        }

        .close{
            position: relative;
            color: white;
            bottom: 165px;
            right: 0px;
            width: 20px;
            cursor: pointer;
            z-index: 99999;
        }

        .modal__featured {
            position: relative;
            -ms-flex: 1;
                flex: 1;
            min-width: 220px;
            padding: 20px;
            overflow: hidden;
            left: 50%;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px; 
        }
    }
        
</style>