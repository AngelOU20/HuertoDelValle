@{
    ViewData["Title"] = "Consultas";
}
@model IEnumerable<Reclamo>
@if (Model.Count() == 0){
<h1>No tenemos reclamos ðŸ˜Š</h1>
}else{
<div class="container">
    <div>
        <h2>Reclamos</h2>
    
        <hr>
        <br>
        <table class="table">
        <thead class="thead-dark">
            <tr class="text-center">
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)  
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th scope="col">
                        Reclamo
                    </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.Id)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mensaje)
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>
}

<style>
h1{
    font-weight: bold;
    text-align: center;
    font-size: 45px;
    padding-bottom: 10px;
    letter-spacing: 1.1px;
}  

h2{
    font-weight: bold;
    text-align: center;
    font-size: 45px;
    padding-bottom: 10px;
    letter-spacing: 1.1px;
} 
</style>