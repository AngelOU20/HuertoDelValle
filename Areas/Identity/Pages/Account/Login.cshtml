@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}
<link rel="stylesheet" href="~/css/login.css" />

    <main>
        <div class="box">
            <div class="inner-box">
                <div class="forms-wrap">
                    
                    <form id="account" method="post" autocomplete="off" class="sign-in-form">
                        <div class="logo">
                            <img src="~/img/logo2.png" alt="" />
                            <h3>El Huerto del Valle</h3>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="heading">
                            <h2>Bienvenido</h2>
                            <h6>¿Todavía no se ha registrado?</h6>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="toggle">Registrate</a>
                        </div>

                        <div class="actual-form">

                            <div class="input-wrap">
                                <input asp-for="Input.Email" type="text" minlength="4" class="input-field" autocomplete="off" required/>
                                <label class="label__login">Email</label>
                            </div>

                            <div class="input-wrap">
                                <input asp-for="Input.Password" type="password" minlength="4" class="input-field" autocomplete="off" required/>
                                <label class="label__login">Contraseña</label>
                            </div>

                        </div>

                        <div class="input-check">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button type="submit" class="sign-btn" >Entrar</button>

                        <a id="forgot-password" asp-page="./ForgotPassword" class="text">¿Olvidaste tu contraseña?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text">Enviar confirmación por Email</a>
                    </form>

                </div>

                <div class="carousel">
                    <div class="images-wrapper">
                        <img src="~/img/img1.jpg" class="image" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </main>

<script src="~/js/form.js"></script>   
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}